set -e

# ====== Handle arguments ===================================================
if [ $# -lt 1 ] ; then
   echo >&2 "Usage: $0 program"
   exit 1
fi

PROGRAM="$1-controller"
if [ ! -e "${PROGRAM}" ] ; then
   echo >&2 "ERROR: ${PROGRAM} does not exist!"
   exit 1
fi
shift

sudo "./${PROGRAM}" $@
